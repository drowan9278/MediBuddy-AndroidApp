<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:layout_height="wrap_content"
        android:text="Add A New Medication"
        android:id="@+id/addMeds"
        android:layout_marginTop="134dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorAccent" />

    <Button
        android:text="View Existing Medications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/viewExist"
        android:fontFamily="serif"
        android:typeface="sans"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorAccent"
        android:layout_alignTop="@+id/addMeds"
        android:layout_alignParentStart="true"
        android:elevation="7dp"
        android:backgroundTint="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To MediBuddy!"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rotatedlogowithshading"
        android:id="@+id/imageView"
        android:layout_below="@+id/viewExist"
        android:layout_alignParentStart="true" />

</RelativeLayout>
